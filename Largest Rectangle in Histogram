def largestRectangleArea(heights):
    stack = []
    max_area = 0
    heights.append(0)  # Append a zero to flush the stack at the end

    for i, h in enumerate(heights):
        while stack and heights[stack[-1]] > h:
            height = heights[stack.pop()]
            width = i if not stack else i - stack[-1] - 1
            max_area = max(max_area, height * width)
        stack.append(i)

    return max_area

# User input
heights = list(map(int, input("Enter the histogram's bar heights (space-separated): ").split()))
max_area = largestRectangleArea(heights)
print("Area of the largest rectangle in the histogram:", max_area)
